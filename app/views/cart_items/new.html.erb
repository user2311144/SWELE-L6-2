<h2>カートに追加</h2>

<p><strong>商品名:</strong> <%= @product.name %></p>
<p><strong>価格:</strong> <%= number_to_currency(@product.price, unit: "円", precision: 0) %></p>

<%= form_with(model: @cart_item, url: cart_items_path, local: true) do |f| %>
  <% if @cart_item.errors.any? %>
    <div style="color: red;">
      <ul>
        <% @cart_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :product_id, value: @product.id %>
  
  <div class="form-group">
    <%= f.label :qty, '数量' %>
    <%= f.number_field :qty, min: 1 %>
  </div>
  
  <div class="actions">
    <%= f.submit '商品を登録する' %>
  </div>
<% end %>